## Dovecot configuration file
#
# This file is generated by Chef for <%= node['fqdn'] %>
#
# Local changes will be overwritten

# Le contenur local est organisé de cette manière :
# /var/mail/vhosts/domain.tld/utilisateur
mail_location = maildir:/var/mail/vhosts/%d/%n/mail
maildir_stat_dirs=yes

namespace inbox {
    inbox = yes
}

mail_uid = 5000
mail_gid = 5000

first_valid_uid = 5000
last_valid_uid = 5000

mail_privileged_group = <%= node['cmamail']['dovecot']['group'] %>